                            <label>fee</label>
                            <input type="text" name="fee" class="form-control" value="<%= edit.fee %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="form4Example3"><%= edit.description %></label>
                            <textarea class="form-control" name="" id="description" cols="30" rows="10"></textarea>
                          </div>
