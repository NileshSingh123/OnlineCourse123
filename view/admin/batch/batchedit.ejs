                                <input type="text" name="teacher_name" class="form-control" value="<%= edit.teacher_name %>">
                            </div>
                            <div class="md-3">
                              <label> timing</label>
                              <input type="text" name="timing" class="form-control" value="<%= edit.timing %>">
                          </div>
                          <div class="md-3">
                            <label> last_update</label>
                            <input type="text" name="last_update" class="form-control" value="<%= edit.last_update %>">
                        </div>
