        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div>
                          <strong class="card-title">Data Update</strong>
                        </div>
                        
                    </div>
                    <div class="card-body">
                        <form action="/batchupdate/<%= edit.id %>" method="post" enctype="multipart/form-data" >
                            <div class="md-3">
                              <label>start_date</label>
                              <input type="text" name="start_date" class="form-control" value="<%= edit.start_date %>">
                          </div>
                          <div class="md-3">
                            <label>end_date</label>
                            <input type="text" name="end_date" class="form-control" value="<%= edit.end_date %>">
                        </div>
                              <div class="md-3">
                                  <label>batch_name</label>
                                  <input type="text" name="batch_name" class="form-control" value="<%= edit.batch_name %>">
                              </div>
                              <div class="md-3">
