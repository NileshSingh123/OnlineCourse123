<%- include('./header.ejs') %>


<div class="form-container" style="
    max-width: 400px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0,0,0,.1);
    margin-top: 50px;
    margin-bottom: 50px;
  ">
    <form action="/forgot_password" method="POST" style="display: flex;
    flex-direction: column;">
      <label for="email" style="margin-bottom: 10px;
      font-weight: 600">Email</label>
      <input type="email" id="email" name="email" style="padding: 10px;
      margin-bottom: 20px;
      border-radius: 5px;
      border: 1px solid #ddd;
      font-size: 16px;">
      <button type="submit" style="padding: 10px;
      border-radius: 5px;
      border: none;
      background-color: #4CAF50;
      color: #fff;
      font-size: 16px;
      cursor: pointer;
      transition: all .3s ease-in-out;
      ">forgot-password</button>
    </form>
  </div>



